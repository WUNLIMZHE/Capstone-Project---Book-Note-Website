<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <header class="p-3 mb-5 text-bg-dark">
      <div class="container" style="background-color: #212529;">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <form class="tab-view tab-view-height-auto d-flex" action="/action" method="post">
            <button type="submit" name="menu" value="Home" id="Home" style="border: none; background: none; padding: 0;">
              <img class="bi d-flex align-items-center mb-2 mb-lg-0 me-3 text-white text-decoration-none" width="40" height="32" role="img" src="images/icon.png" alt="book icon">
            </button>
          </form>
          <!-- <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 me-3 text-white text-decoration-none">
            <img class="bi " width="40" height="32" role="img" src="images/icon.png" alt="book icon">
          </a> -->
  
          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <form class="tab-view tab-view-height-auto d-flex" action="/action" method="post">
              <input type="submit" class="nav-link px-2 text-secondary" name="menu" value="Home" id="Home" style="align-content: center;">
            </form>
            <form class="tab-view tab-view-height-auto d-flex" action="/me" method="get">
              <input type="submit" class="nav-link px-2 text-secondary" name="menu" value="My Note" id="My-note" style="align-content: center;">
            </form>
          </ul>

          <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" style="display: inline-block;" action="/search" method="post">
            <div class="d-flex">
              <input type="text" class="form-control form-control-dark me-2" name="search_result" placeholder="Search..." aria-label="Search">
              <button type="submit" class="btn btn-outline-light">Search</button>
            </div>
          </form>
  
          <div class="btn-group">
            <button class="btn btn-secondary btn-m dropdown-toggle " type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Sort by
            </button>
            <ul class="dropdown-menu">
              <li>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Book title by ASC" id="home/user">
                </form>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Latest by ASC" id="home/user">
                </form>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Rating by ASC" id="home/user">
                </form>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Book title by DESC" id="home/user">
                </form>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Latest by DESC" id="home/user">
                </form>
                <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                  <input type="submit" name="sort" value="Rating by DESC" id="home/user">
                </form>
              </li>
            </ul>
          </div>

        </div>
      </div>
    </header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>