<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
  </head>
  <body>
    <header class="p-3 mb-5 text-bg-dark">
      <div class="container" style="background-color: #212529;">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
          <form class="tab-view tab-view-height-auto d-flex" action="/action" method="post">
            <button type="submit" name="menu" value="Home" id="Home" style="border: none; background: none; padding: 0;">
              <img class="bi d-flex align-items-center mb-2 mb-lg-0 me-3 text-white text-decoration-none" width="40" height="32" role="img" src="images/icon.png" alt="book icon">
            </button>
          </form>
          <!-- <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 me-3 text-white text-decoration-none">
            <img class="bi " width="40" height="32" role="img" src="images/icon.png" alt="book icon">
          </a> -->
  
          <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
            <form class="tab-view tab-view-height-auto d-flex" action="/action" method="post">
              <input type="submit" class="nav-link px-2 text-secondary" name="menu" value="Home" id="Home" style="align-content: center;">
            </form>

            <div class="nav-item dropdown">
              <a class="nav-link dropdown-toggle text-secondary m-0" id="Sort" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by
              </a>
              <ul class="dropdown-menu">
                <li class="p-0">
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Book title (A-Z)" style="border: none;">
                  </form>
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Date: Newest First" style="border: none;">
                  </form>
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Rating: High to Low" style="border: none;">
                  </form>
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Book title (Z-A)" style="border: none;">
                  </form>
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Date: Oldest First" style="border: none;">
                  </form>
                  <form class="tab-view tab-view-height-auto" action="/sort" method="post">
                    <input class="text-start sort-option" type="submit" name="sort" value="Rating: Low to High" style="border: none;">
                  </form>
                </li>
              </ul>
            </div>

            <form class="tab-view tab-view-height-auto d-flex" action="/me" method="get">
              <input type="submit" class="nav-link px-2 text-secondary" name="menu" value="My Note" id="My-note" style="align-content: center;">
            </form>
          </ul>

          <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" style="display: inline-block;" action="/search" method="post">
            <div class="d-flex">
              <input type="text" class="form-control form-control-dark me-2" name="search_result" placeholder="Search..." aria-label="Search">
              <button type="submit" class="btn btn-outline-light">Search</button>
            </div>
          </form>
          
          <% if (locals.isLogin){ %>
            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 justify-content-center" role="search" style="display: inline-block;" action="/logout" method="get">
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-light">Logout</button>
              </div>
            </form>
          <% } else {%>
            <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 justify-content-center" role="search" style="display: inline-block;" action="/login" method="get">
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-light">Join Us!</button>
              </div>
            </form>
          <% } %>
        </div>
      </div>
    </header>
    <script>
      // Get all elements with the class 'sort-option'
      var sortOptions = document.getElementsByClassName('sort-option');

      // Loop through each element and add event listeners
      for (var i = 0; i < sortOptions.length; i++) {
        //set all backgroundColor initially
        sortOptions[i].style.backgroundColor = 'white';
      }

      // Loop through each element and add event listeners
      for (var i = 0; i < sortOptions.length; i++) {
        sortOptions[i].addEventListener('mouseover', function() {
          this.style.backgroundColor = '#e0e0e0'; // Darker shade on hover
        });
        
        sortOptions[i].addEventListener('mouseout', function() {
          this.style.backgroundColor = 'white'; // Original color when not hovering
        });
      }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>